<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jiaoyajing.dizner.wplayer.activity.ListActivity">
    <FrameLayout
        android:id="@+id/fl_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/colors"/>
    <RelativeLayout
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@color/write"

        >

        <ImageView
            android:id="@+id/songimg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/play_logo" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/songimg"
            android:layout_alignTop="@id/songimg"
            android:layout_toRightOf="@id/songimg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/musicname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="爱上音乐--WPlayer"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/authorname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="随心远行"
                android:textColor="@color/garv_black"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/prebtu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/pre_01" />

            <ImageView
                android:id="@+id/startbtu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/start_01" />

            <ImageView
                android:id="@+id/nextbtu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/next_01" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
